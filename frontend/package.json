{
    "name": "frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "main": "dist-electron/main/main.js",
    "scripts": {
        "dev": "vite",
        "dev:electron": "cross-env ENABLE_ELECTRON=true vite",
        "build": "tsc -b && vite build",
        "build:electron": "tsc -b && cross-env ENABLE_ELECTRON=true NODE_ENV=production vite build --mode electron.production && electron-builder",
        "lint": "eslint .",
        "preview": "vite preview"
    },
    "dependencies": {
        "@radix-ui/react-avatar": "^1.1.10",
        "@radix-ui/react-context-menu": "^2.2.16",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-select": "^2.2.6",
        "@radix-ui/react-slider": "^1.3.6",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-tooltip": "^1.2.8",
        "@ricky0123/vad-react": "^0.0.34",
        "@ricky0123/vad-web": "^0.0.28",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "i18next": "^25.6.0",
        "i18next-browser-languagedetector": "^8.2.0",
        "lucide-react": "^0.546.0",
        "mediasoup-client": "3",
        "mobx": "^6.15.0",
        "mobx-react-lite": "^4.1.1",
        "onnxruntime-web": "^1.23.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-i18next": "^16.1.4",
        "react-router-dom": "^7.9.4",
        "tailwind-merge": "^3.3.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@types/node": "^24.6.0",
        "@types/react": "^19.1.16",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "^5.0.4",
        "cross-env": "^10.1.0",
        "electron": "^33.2.0",
        "electron-builder": "^24.13.3",
        "eslint": "^9.36.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.22",
        "globals": "^16.4.0",
        "sass": "^1.93.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.45.0",
        "vite": "^7.1.7",
        "vite-plugin-electron": "^0.28.8",
        "vite-plugin-electron-renderer": "^0.14.5",
        "vite-plugin-static-copy": "^3.1.4"
    },
    "build": {
        "appId": "com.hype.desktop",
        "productName": "Hype",
        "asar": false,
        "directories": {
            "buildResources": "build",
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "package.json"
        ],
        "extraMetadata": {
            "main": "dist-electron/main/main.js"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}
