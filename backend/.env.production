# Server Configuration
PORT=3001
WS_PORT=8080

# Frontend URL for CORS
FRONTEND_URL=https://voice.pestov-web.ru

# Production mode
NODE_ENV=production

# ============================================
# DATABASE
# ============================================
# TODO: Replace with production PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5435/hype_db?schema=public"

# ============================================
# JWT AUTHENTICATION
# ============================================
# TODO: Replace with strong random secrets in production
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================
# SFU (Mediasoup) CONFIGURATION
# ============================================

# Public IP address of the server (replace with actual IP)
# Get it with: curl -4 ifconfig.me
SFU_ANNOUNCED_IP="185.128.105.95"

# RTC port range (must be opened in firewall)
RTC_MIN_PORT=40000
RTC_MAX_PORT=49999

# SFU logging (use 'warn' or 'error' in production)
SFU_LOG_LEVEL=warn

# Node identification for multi-region setup
NODE_ID=sfu-1
NODE_REGION=eu-west-1

# ============================================
# OAUTH PROVIDERS (Optional for production)
# ============================================
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""

# ============================================
# MINIO (S3-compatible storage)
# ============================================
# TODO: Configure production MinIO or S3
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="hype-uploads"
MINIO_USE_SSL=false
