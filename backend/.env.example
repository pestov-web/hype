# Backend Environment Variables (Production)
# Copy this to .env and fill in the values

# Server Configuration
NODE_ENV=production
PORT=3001
WS_PORT=8080

# PostgreSQL Database
# Replace with your actual database credentials
DATABASE_URL="postgresql://hype_user:YOUR_STRONG_PASSWORD@localhost:5432/hype_db"

# JWT Authentication
# Generate strong random secrets:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="REPLACE_WITH_STRONG_RANDOM_SECRET_64_CHARS_MIN"
JWT_REFRESH_SECRET="REPLACE_WITH_DIFFERENT_STRONG_RANDOM_SECRET_64_CHARS_MIN"

# SFU Configuration
# Replace with your server's PUBLIC IP address
SFU_ANNOUNCED_IP="YOUR_SERVER_PUBLIC_IP"
RTC_MIN_PORT=40000
RTC_MAX_PORT=49999
SFU_LOG_LEVEL=warn

# CORS Configuration
# Replace with your frontend URL
CORS_ORIGIN="https://yourdomain.com"

# Optional: Node ID for multi-region deployment
NODE_ID="sfu-msk-1"
NODE_REGION="msk"
